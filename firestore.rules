rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /polls/{pollId} {
      // Anyone can read a poll to vote on it
      allow read: if true;
      // Only authenticated users can create polls
      allow create: if request.auth != null;
      // Only the owner can update (e.g. close) or delete the poll
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      match /votes/{voteId} {
        // Anyone can vote
        allow create: if true;
        // Only the poll owner can read the votes
        allow read: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/polls/$(pollId)).data.userId;
      }
    }
  }
}
